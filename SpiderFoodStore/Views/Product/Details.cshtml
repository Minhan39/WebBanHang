<div class="container mb-5 mt-5">
    <div class="card">
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-center mb-1">
                    Comment
                </h3>
                <div class="row">
                    <div class="col-md-12">
                        @using (Html.BeginForm("NewComment", "Comment", FormMethod.Post, htmlAttributes: new {@class = "col-md-12 mb-4" }))
                        {
                            <p>Comment for detail product</p>
                            <textarea style="width: 100%; height: 100px;" name="content"></textarea>
                            <input hidden name="id" value="@Model.Id"/>
                            <input hidden name="parent" value="-1" />
                            <button class="btn btn-primary" type="submit">Send</button>
                        }
                        @ViewBag.Message
                        @Html.Action("ParentComment", "Comment", new {id = Model.Id})
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>