@using SpiderFoodStore.Models
<div class="col-lg-6">
    @{
        SaleCode sale = ViewBag.Sale;
        decimal total = decimal.Parse(ViewBag.SubTotal.ToString()) - ((sale != null) ? sale.DiscountValue : 0);
        string totalTitle = "Total" + ((sale != null) ? " (Apply code: " + sale.Name + ")" : "");
    }
    <div class="shoping__checkout">
        <h5>Cart Total</h5>
        <ul>
            <li>Subtotal <span>$@ViewBag.SubTotal</span></li>
            <li>@totalTitle <span>$@total</span></li>
        </ul>
        <a href="@Url.Action("CheckOut", "ShoppingCart")" class="primary-btn">PROCEED TO CHECKOUT</a>
    </div>
</div>
